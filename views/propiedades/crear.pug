extends ../layout/index

block contenido
    div
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(action="" class="space-y-2") 
                div.space-y-5
                    h3.text-lg.leanding-6.font-medium.text-gray-900 Información General
                    p.text-gray-600 Añade información sobre la propiedad en venta

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Titulo anuncio
                        input#titulo.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(placeholder="Titulo propiedad, ej. Casa en la playa" type="text" name="titulo")

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="categoria") Categoria
                            select#categoria.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(name="categoria")
                                option(value="") - seleccione - 
                    
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="precio") Precio
                            select#precio.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(name="precio")
                                option(value="") - seleccione - 

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(name="habitaciones")
                                option(value="") - seleccione - 
                                - let n=1;
                                    while n < 5
                                        option(value=n) #{n++} 

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(name="estacionamiento")
                                option(value="") - seleccione -
                                - let e=1;
                                    while e < 5
                                        option(value=e) #{e++}  
                        
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="wc") WC
                            select#wc.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(name="wc")
                                option(value="") - seleccione - 
                                - let w=1;
                                    while w < 5
                                        option(value=w) #{w++}  

block scripts
