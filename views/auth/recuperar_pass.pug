extends ../layout/index

block contenido
    div
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/auth/recuperar_pass' noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Tu Email
                        input#email.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(placeholder=" Tu Email" type="email" name="email")

                    div.flex.w-full
                        a(class="text-gray-500 text-xs w-1/2 text-left" href="/auth/registro") ¿ No tienes cuenta? Registrate! 
                        a(class="text-gray-500 text-xs w-1/2 text-right" href="/auth/login") ¿ Ya tienes cuenta ? Inicia Sesion!   

                    input(class="w-full bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type='submit' value="Recuperar password")  
