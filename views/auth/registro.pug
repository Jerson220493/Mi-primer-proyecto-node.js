extends ../layout/index

block contenido
    div
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(placeholder=" Tu Nombre" type="text" name="nombre")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Tu Email
                        input#email.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(placeholder=" Tu Email" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Tu Password
                        input#password.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(placeholder=" Tu Password" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="repite_password") Repetir Password
                        input#repite_password.w-full.px-3-py-2.pl-2.border.border-gray-300.rounded-md.placeholder-gray-400.h-10(placeholder="Repite tu Password" type="password" name="repite_password")  

                    div.flex.w-full
                        a(class="text-gray-500 text-xs w-1/2 text-left" href="/auth/login") ¿Ya tienes cuenta? Inicia Sesion 
                        a(class="text-gray-500 text-xs w-1/2 text-right" href="/auth/recuperar_pass") Olvido contraseña

                    input(class="w-full bg-indigo-400 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type='submit' value="Crear Cuenta")      
